{
	"name": "vite-plugin-autolib",
	"description": "Automatically fills out your package.json for both local and published version",
	"version": "0.0.14",
	"license": "MIT",
	"private": false,
	"homepage": "https://www.github.com/AlexAegis/vite-plugin-autolib#readme",
	"keywords": [
		"@alexaegis/setup-depcheck",
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-remark",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite-lib",
		"@alexaegis/setup-vitest-node",
		"javascript",
		"js",
		"ts",
		"typescript",
		"vite"
	],
	"type": "module",
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 6 --filter vite-plugin-autolib",
		"build-lib_": "vite build",
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 6 --filter vite-plugin-autolib",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 6 --filter vite-plugin-autolib",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --filter vite-plugin-autolib",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 6 --filter vite-plugin-autolib",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --filter vite-plugin-autolib",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"test": "turbo run test_ --concurrency 6 --filter vite-plugin-autolib",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage --run",
		"typedoc": "typedoc ./src/index.ts --out ./dist/typedoc"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./example": "./static/example.json",
		"./readme": "./readme.md"
	},
	"bin": {
		"reorder-json": "./shims/reorder-json.js"
	},
	"dependencies": {
		"@alexaegis/common": "0.1.1",
		"@alexaegis/fs": "0.1.1",
		"@alexaegis/logging": "0.1.1",
		"@alexaegis/workspace-tools": "0.1.1",
		"@types/node": "^18.15.11",
		"globby": "^13.1.3",
		"prettier": "^2.8.7",
		"rollup": "^3.20.2",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4",
		"vite": "^4.2.1",
		"yargs": "^17.7.1"
	},
	"peerDependencies": {
		"typescript": "^5.0.3"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-vitest": "^0.1.1",
		"@alexaegis/ts": "^0.1.1",
		"@alexaegis/vite": "^0.1.1",
		"@alexaegis/vitest": "^0.1.1",
		"@types/yargs": "^17.0.24",
		"vite": "^4.2.1",
		"vitest": "^0.29.8"
	}
}

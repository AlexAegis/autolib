{
	"name": "@pakk/core",
	"description": "The core library of pakk, that can manage your package.json for library development.",
	"version": "0.12.2",
	"license": "MIT",
	"private": false,
	"archetype": {
		"platform": "node",
		"language": "ts",
		"kind": "lib"
	},
	"keywords": [
		"javascript",
		"js",
		"managed-by-autotool",
		"ts",
		"typescript"
	],
	"type": "module",
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 16 --cache-dir .cache/turbo --filter @pakk/core",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 16 --cache-dir .cache/turbo --filter @pakk/core",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 16 --cache-dir .cache/turbo --filter @pakk/core",
		"lint:format_": "prettier --cache-location .cache/prettier --plugin prettier-plugin-svelte --plugin prettier-plugin-tailwindcss --check .",
		"lint:md": "turbo run lint:md_ --concurrency 16 --cache-dir .cache/turbo --filter @pakk/core",
		"lint:md_": "remark --frail --no-stdout --silently-ignore .",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 16 --cache-dir .cache/turbo --filter @pakk/core",
		"lint:tsc_": "tsc --noEmit",
		"publint": "BUILD_REASON='publish' turbo run publint_ --concurrency 16 --cache-dir .cache/turbo --filter @pakk/core",
		"publint_": "publint dist",
		"test": "turbo run test_ --concurrency 16 --cache-dir .cache/turbo --filter @pakk/core",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage",
		"all": "BUILD_REASON='publish' turbo run all_ --concurrency 16 --cache-dir .cache/turbo --filter @pakk/core",
		"build": "turbo run build-lib_ --concurrency 16 --cache-dir .cache/turbo --filter @pakk/core",
		"build-lib_": "vite build",
		"format": "turbo run format_ --concurrency 16 --cache-dir .cache/turbo --filter @pakk/core",
		"format_": "prettier --cache-location .cache/prettier --plugin prettier-plugin-svelte --plugin prettier-plugin-tailwindcss --write .",
		"imnotworking:pakk:asd": "echo This line should make a warning during build",
		"postinstall": "echo I should not run for other people # pakk:not-distributed",
		"prebuild_": "vite build --config vite-prebuild.config.ts"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json",
		"./readme": "./readme.md"
	},
	"dependencies": {
		"@alexaegis/common": "^0.10.0",
		"@alexaegis/fs": "^0.10.0",
		"@alexaegis/logging": "^0.10.0",
		"@alexaegis/workspace-tools": "^0.10.0",
		"@types/node": "^22.7.8",
		"globby": "^14.0.2",
		"prettier": "^3.3.3",
		"rollup": "^4.24.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.3",
		"vite": "^5.4.9"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-vitest": "^0.11.5",
		"@alexaegis/ts": "^0.11.5",
		"@alexaegis/vite": "^0.11.5",
		"@alexaegis/vitest": "^0.11.5",
		"@types/node": "^22.7.8",
		"@types/yargs": "^17.0.33",
		"publint": "^0.2.11",
		"vite": "^5.4.9",
		"vitest": "^2.1.3"
	}
}
